<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.roqtv" name="ROQ TV Repo" version="1.5" provider-name="ROQTV">
  <requires>
    <import addon="plugin.video.roqtv"/>
  </requires>
	<extension point="xbmc.addon.repository" name="ROQ TV add-on repository">
		<dir>
		<info compressed="false">http://raw.github.com/MXTV/roqrepo/master/addons.xml</info>
		<checksum>http://raw.github.com/MXTV/roqrepo/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/MXTV/roqrepo/master/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>ROQ TV Addons</summary>
		<description>Download and install addons from the ROQ TV repository.</description>
		<platform>all</platform>
	</extension>
</addon>

