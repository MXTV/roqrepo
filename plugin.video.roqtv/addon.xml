<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.roqtv" version="4.0" name="ROQ TV" provider-name="ROQ TV">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.addon.common" optional="true"/>
		<import addon="script.module.pytz" version="2014.2"/>
		<import addon="script.module.dateutil" version="2.5.3"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup">
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>ROQ TV</summary>
        <description>ROQ Hosting offering only the best</description>
		<website>http://roq-tv.com</website>
        <language>en</language>
        <platform>all</platform>
    </extension>
</addon>